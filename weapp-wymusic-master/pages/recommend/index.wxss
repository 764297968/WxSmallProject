@import '../common/search.wxss';
.navigation {
  width: 33.3333%;
  float: left;
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.active {
  border-bottom: 1px solid #d33a31;
}

.stitle {
  content: " ";
  left: 0;
  width: 2px;
  height: 16px;
  line-height: 16px;
}

.stitle ::after {
  content: " ";
  position: absolute;
  left: 4px;
  width: 2px;
  height: 16px;
  line-height: 16px;
  background-color: #d33a31;
}

.recommendcon {
  margin: 15px;
}

.recomimg {
  float: left;
  width: 33.333%;
}

.recomimg image {
  width: 98%;
  height: 105px;
  margin-left: 2px;
}

.imgtext {
  font-size: 13px;
  padding: 6px 2px 0 6px;
}

.musicnum {
  position: absolute;
  right: 5px;
  top: 2px;
  z-index: 3;
  padding-left: 13px;
  color: #fff;
  font-size: 12px;
  background-position: 0;
  background-repeat: no-repeat;
  background-size: 11px 10px;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.15);
}

.imgcon {
  position: relative;
}

.remd_songs {
  padding-bottom: 20px;
  height: 300px;
}

swiper {
  margin-top: 1rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  box-sizing: border-box;
  padding-top: 10rpx;
}

.block {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
  margin-bottom: 10rpx;
}

.left {
  width: 20%;
  height: 100%;
  padding: 5rpx;
  box-sizing: border-box;
}

.left image {
  width: 100%;
  height: 100%;
}

.right {
  width: 80%;
  flex: 1;
  height: 100%;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  display: flex;
}

.content {
  padding: 10rpx;
  height: 100%;
  width: 90%;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: normal;
}

.play {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.play image {
  width: 28px;
  height: 28px;
}

.content view {
  width: 100%;
  margin-bottom: 20rpx;
}

.song-name {
  font-size: 18px;
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* word-break: normal; */
}

.song-artists {
  font-size: 14px;
  color: #999;
}
